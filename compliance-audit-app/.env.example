# Flask Configuration
FLASK_ENV=development
# These will be auto-generated for you - no need to worry about them!
SECRET_KEY=auto-generated-no-need-to-change
JWT_SECRET_KEY=auto-generated-no-need-to-change

# Database Configuration
# For simple development, just use SQLite (no setup needed):
DATABASE_URL=sqlite:///compliance_audit.db

# OpenAI Configuration (instead of Azure)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OCR Configuration (optional - will use PyPDF2 for text extraction)
# Leave these empty if you don't have Azure
AZURE_COMPUTER_VISION_ENDPOINT=
AZURE_COMPUTER_VISION_KEY=

# Email Configuration (optional - leave empty to disable)
MAIL_SERVER=
MAIL_PORT=
MAIL_USE_TLS=
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=

# Redis Configuration (optional - leave empty to disable background tasks)
REDIS_URL=

# Application Settings
PORT=5000